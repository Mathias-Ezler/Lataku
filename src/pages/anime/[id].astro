---
// src/pages/anime/[id].astro
import Layout from '../../layouts/Layout.astro';
import { getAnimeById, animeData } from '../../data/anime';

// Generar rutas estáticas para cada anime
export function getStaticPaths() {
    return animeData.map(anime => ({
        params: { id: anime.id },
        props: { anime },
    }));
}

// Obtener el anime de las props
const { anime } = Astro.props;
---

<Layout title={anime.title}>
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row gap-8">
            <!-- Imagen del anime -->
            <div class="w-full md:w-1/3">
                <img 
                    src={anime.imageUrl} 
                    alt={anime.title}
                    class="w-full rounded-lg shadow-lg"
                />
            </div>

            <!-- Información del anime -->
            <div class="w-full md:w-2/3">
                <h1 class="text-3xl font-bold mb-4">{anime.title}</h1>
                
                <div class="space-y-4">
                    <!-- Estado y tipo -->
                    <div class="flex gap-4">
                        <span class="px-3 py-1 bg-pink-600 rounded-full text-sm">
                            {anime.status}
                        </span>
                        <span class="px-3 py-1 bg-purple-600 rounded-full text-sm">
                            {anime.type}
                        </span>
                    </div>

                    <!-- Categorías -->
                    <div class="flex flex-wrap gap-2">
                        {anime.categories.map(category => (
                            <span class="px-3 py-1 bg-gray-700 rounded-full text-sm">
                                {category}
                            </span>
                        ))}
                    </div>

                    <!-- Episodios y rating -->
                    <div class="space-y-2">
                        {anime.episodes && (
                            <p>Episodios: {anime.episodes}</p>
                        )}
                        <p>Rating: {anime.rating}/5</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>