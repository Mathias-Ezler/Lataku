---
// Header.astro
---

<header id="main-header" class="bg-gray-900 text-white shadow-lg p-3 w-full z-50 md:fixed relative">
    <nav class="container mx-auto px-4 py-3">
        <div class="flex items-center justify-between">
            <!-- Logo y Nombre del Sitio -->
            <div class="flex items-center space-x-2 md:space-x-3">
                <span class="text-lg md:text-xl font-bold bg-gradient-to-r from-purple-500 to-pink-500 bg-clip-text text-transparent">
                    Lataku
                </span>
            </div>

            <!-- Menú Principal - Desktop -->
            <div class="hidden md:flex items-center space-x-6 lg:space-x-8">
                <a href="/" class="hover:text-purple-400 transition-colors duration-200 text-sm lg:text-base">Inicio</a>
                <a href="/category" class="hover:text-purple-400 transition-colors duration-200 text-sm lg:text-base">Categorias</a>
                <a href="/#sincensura" class="hover:text-purple-400 transition-colors duration-200 text-sm lg:text-base">Sin Censura</a>
            </div>

            <!-- Búsqueda - Desktop -->
            <div class="hidden md:flex items-center">
                <div class="relative">
                    <input 
                        type="search" 
                        placeholder="Buscar anime..." 
                        class="bg-gray-800 text-white px-4 py-2 rounded-full focus:outline-none focus:ring-2 focus:ring-purple-500 w-48 lg:w-64 text-sm"
                    />
                    <button class="absolute right-3 top-2.5">
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Menú Móvil - Botón -->
            <button class="md:hidden p-2 hover:bg-gray-800 rounded-lg" id="mobile-menu-button" aria-label="Menú">
                <div class="hamburger-icon w-6 h-6 relative">
                    <span class="hamburger-line top-line"></span>
                    <span class="hamburger-line middle-line"></span>
                    <span class="hamburger-line bottom-line"></span>
                </div>
            </button>
        </div>

        <!-- Menú Móvil - Contenido -->
        <div class="md:hidden mobile-menu-container" id="mobile-menu">
            <div class="mobile-menu-content opacity-0 -translate-y-4">
                <!-- Barra de búsqueda móvil -->
                <div class="px-2 pt-4 pb-3">
                    <div class="relative">
                        <input 
                            type="search" 
                            placeholder="Buscar anime..." 
                            class="w-full bg-gray-800 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-sm"
                        />
                        <button class="absolute right-3 top-2.5">
                            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </button>
                    </div>
                </div>
                <!-- Enlaces de navegación móvil -->
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a href="/" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors duration-200">Inicio</a>
                    <a href="/category" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors duration-200">Categorias</a>
                    <a href="#sincensura" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors duration-200">Sin Censura</a>
                </div>
            </div>
        </div>
    </nav>
</header>

<style>
    /* Estilos para el comportamiento del scroll */
    @media (max-width: 767px) {
        #main-header {
            transition: transform 0.3s ease-in-out;
        }

        #main-header.scroll-down {
            transform: translateY(-100%);
        }

        #main-header.scroll-up {
            transform: translateY(0);
        }
    }

    /* Estilos para el ícono hamburguesa */
    .hamburger-icon {
        cursor: pointer;
    }

    .hamburger-line {
        display: block;
        position: absolute;
        height: 2px;
        width: 100%;
        background: white;
        border-radius: 2px;
        transition: all 0.3s ease-in-out;
    }

    .top-line {
        top: 25%;
    }

    .middle-line {
        top: 50%;
        transform: translateY(-50%);
    }

    .bottom-line {
        bottom: 25%;
    }

    /* Animación del ícono hamburguesa */
    .menu-open .top-line {
        transform: translateY(8px) rotate(45deg);
    }

    .menu-open .middle-line {
        opacity: 0;
    }

    .menu-open .bottom-line {
        transform: translateY(-8px) rotate(-45deg);
    }

    /* Estilos del menú móvil */
    .mobile-menu-container {
        height: 0;
        overflow: hidden;
        transition: height 0.3s ease-in-out;
    }

    .mobile-menu-container.menu-open {
        height: auto;
    }

    .mobile-menu-content {
        transition: all 0.3s ease-in-out;
    }

    .mobile-menu-container.menu-open .mobile-menu-content {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const header = document.getElementById('main-header');
    let lastScroll = 0;

    // Toggle menú móvil con animaciones
    mobileMenuButton?.addEventListener('click', () => {
        const hamburgerIcon = mobileMenuButton.querySelector('.hamburger-icon');
        hamburgerIcon?.classList.toggle('menu-open');
        
        if (mobileMenu) {
            mobileMenu.classList.toggle('menu-open');
            
            // Ajustar altura del contenedor
            if (mobileMenu.classList.contains('menu-open')) {
                const content = mobileMenu.querySelector('.mobile-menu-content');
                if (content) {
                    mobileMenu.style.height = `${(content as HTMLElement).offsetHeight}px`;
                }
            } else {
                mobileMenu.style.height = '0';
            }
        }
    });

    // Manejo del scroll en móviles
    window.addEventListener('scroll', () => {
        if (window.innerWidth < 768) {
            const currentScroll = window.pageYOffset;
            
            if (currentScroll <= 0) {
                header?.classList.remove('scroll-up');
                return;
            }

            if (currentScroll > lastScroll && !header?.classList.contains('scroll-down')) {
                header?.classList.remove('scroll-up');
                header?.classList.add('scroll-down');
            } else if (currentScroll < lastScroll && header?.classList.contains('scroll-down')) {
                header?.classList.remove('scroll-down');
                header?.classList.add('scroll-up');
            }
            lastScroll = currentScroll;
        }
    });

    // Ajustar altura del menú al redimensionar la ventana
    window.addEventListener('resize', () => {
        if (mobileMenu?.classList.contains('menu-open')) {
            const content = mobileMenu.querySelector('.mobile-menu-content');
            if (content) {
                mobileMenu.style.height = `${(content as HTMLElement).offsetHeight}px`;
            }
        }
    });
</script>